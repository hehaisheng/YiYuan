<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
    android:background="@drawable/common_background_with_white"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/gridcell_img"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19.0dip"
        android:src="@drawable/ic_index_tab_kind" />

    <TextView
        android:id="@+id/gridcell_txt"
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        android:layout_below="@id/gridcell_img"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="6.0dip"
        android:textColor="@color/tab"
        android:textSize="12.0sp" />

    <View
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@color/common_line" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentTop="true"
        android:background="@color/common_line" />

</RelativeLayout>