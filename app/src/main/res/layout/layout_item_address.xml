<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_background_with_white"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="3dp"
            />
        <LinearLayout
            android:id="@id/ship_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_address_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/blue" />
        </LinearLayout>

        <RelativeLayout
            android:id="@id/name_add_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7.5dp"
            android:layout_toLeftOf="@id/ship_address_edit">

            <TextView
                android:id="@id/ship_address_name"
                style="@style/ShipAddressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginBottom="7.5dp"
                android:singleLine="true"
                android:text="王小英"
                android:textColor="@color/dark_gray"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/line_one"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ship_address_name"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/common_line" />

            <TextView
                android:id="@id/ship_address_mobile"
                style="@style/ShipAddressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_one"
                android:layout_marginTop="7.5dip"
                android:layout_marginLeft="15.0dip"
                android:singleLine="true"
                android:text="13800138000"
                android:textColor="@color/dark_gray"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_tow"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/name_add_mobile"
            android:layout_toLeftOf="@id/ship_address_edit"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/common_line"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_add_mobile"
            android:layout_marginTop="7.5dip"
            android:layout_marginLeft="15.0dip"
            android:layout_toLeftOf="@id/ship_address_edit">

            <TextView
                android:id="@+id/ship_address_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textColor="@color/dark_gray"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/ship_address_detail"
                style="@style/ShipAddressList"
                android:layout_toRightOf="@id/ship_address_detail_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3.0sp"
                android:textColor="@color/dark_gray"
                android:textSize="16.0sp"
                android:text="广东省广州市广东省广州市广市广市广市广市广市广" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/common_line" />
</LinearLayout>