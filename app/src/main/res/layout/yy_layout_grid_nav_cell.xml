<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
    android:background="@drawable/common_background_with_white"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_column_very_small_margin"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gridcell_img"
            android:layout_width="42.0dip"
            android:layout_height="42.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_index_tab_kind" />

        <TextView
            android:id="@+id/gridcell_txt"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_marginLeft="@dimen/common_column_very_small_margin"
            android:gravity="center"
            android:textColor="@color/tab"
            android:textSize="15.0sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="1.0dp"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/common_line" />

</RelativeLayout>