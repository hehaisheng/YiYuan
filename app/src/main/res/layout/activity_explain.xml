<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@id/toolbar"
        layout="@layout/include_top_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_gray_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/seashell"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="14sp"
                            style="@style/normalTextStyle"
                            android:drawableLeft="@drawable/ear"
                            android:drawablePadding="8dp"
                            android:text="@string/explain_cumulative_invitation_evenue" />

                        <TextView
                            android:id="@+id/explain_commission"
                            style="@style/normalTextStyle"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/crimson"
                            tools:text="- - -" />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="14sp"
                            style="@style/normalTextStyle"
                            android:drawableLeft="@drawable/per"
                            android:drawablePadding="8dp"
                            android:text="@string/explain_number_of_successful_invitations" />

                        <TextView
                            android:id="@+id/explain_invitationNumber"
                            style="@style/normalTextStyle"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/crimson"
                            tools:text="- - -" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/diliverStyle"
                android:layout_height="3dp"
                android:background="@color/appcolor_tran" />

            <View
                style="@style/diliverStyle"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_gray_border"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/seashell"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:textSize="14sp"
                        style="@style/normalTextStyle"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/com"
                        android:drawablePadding="8dp"
                        android:text="@string/explain_title" />

                </RelativeLayout>

                <View style="@style/diliverStyle" />


                <LinearLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/num_1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/normalTextStyle"
                            android:textSize="14sp"
                            android:text="@string/explain_tip_content_first_title"
                            android:textColor="@color/appcolor_tran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lines="3"
                            android:text="@string/explain_tip_content_first_content"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/num_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/normalTextStyle"
                            android:textSize="14sp"
                            android:text="@string/explain_tip_content_second_title"
                            android:textColor="@color/appcolor_tran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lines="6"
                            android:text="@string/explain_tip_content_second_content"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/num_3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="14sp"
                            style="@style/normalTextStyle"
                            android:text="@string/explain_tip_content_three_title"
                            android:textColor="@color/appcolor_tran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lines="6"
                            android:text="@string/explain_tip_content_three_content"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/num_4" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/normalTextStyle"
                            android:textSize="14sp"
                            android:text="@string/explain_tip_content_four_title"
                            android:textColor="@color/appcolor_tran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lines="3"
                            android:text="@string/explain_tip_content_four_content"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/paddingLeftRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/normalTextStyle"
                            android:text="@string/explain_tip_title"
                            android:textColor="@color/appcolor_tran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:lines="4"
                            android:text="@string/explain_tip_content"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
