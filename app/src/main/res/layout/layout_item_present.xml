<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@id/image"
        android:layout_width="90.0dip"
        android:layout_height="68.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="15.0dip"
        android:src="@drawable/ic_present_item" />

    <RelativeLayout
        android:id="@id/goods_add"
        android:layout_width="70.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip">

        <TextView
            android:id="@id/tv_mission_uncomplite"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/common_background"
            android:gravity="center"
            android:text="未完成"
            android:textColor="@color/appcolor_deep"
            android:visibility="gone"
          />

        <TextView
            android:id="@id/tv_mission_complite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/common_background"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/divider_color"
         android:visibility="gone" />

        <Button
            android:id="@id/mission_button"
            style="@style/Button.mission"
            android:layout_width="fill_parent"
            android:layout_height="32.0dip"
            android:layout_centerVertical="true"
            android:text="领奖励"
            android:textSize="14.0sp"
            android:singleLine="true"
            android:visibility="gone"
            />

        <Button
            android:id="@id/mission_sign"
            style="@style/Button.mission"
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_alignParentBottom="true"
            android:text="签到"
            android:textSize="14.0sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_toLeftOf="@id/goods_add"
        android:layout_toRightOf="@id/image">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:ellipsize="end"
            android:lineSpacingExtra="3.0dip"
            android:text="每日签到"
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textColor="@color/appcolor_deep"
            android:text="任务奖励"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reward"
            android:layout_marginTop="6.0dip"
            android:text="任务说明"
            android:textColor="#ff999999"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="#ffdcdcdc" />
</RelativeLayout>
