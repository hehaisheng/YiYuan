<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    >


    <LinearLayout
        android:id="@+id/layout_payresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.shawnway.nav.app.yylg.view.CirclerImageView
            android:id="@+id/order_good_img"
            android:layout_width="54dp"
            android:layout_height="36dp"
            android:src="@drawable/img_blank" />

        <TextView
            android:id="@id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="0.9"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ff999999"
            android:textSize="12sp"
            tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试" />

        <TextView
            android:id="@id/aside"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/red"
            tools:text="8888888" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_vertical|left"
            android:text="人次"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="11dp"
            android:src="@drawable/ic_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />
</RelativeLayout>