<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@id/toolbar"
        layout="@layout/include_top_adjust_gray" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="收 货 人: " />

                <EditText
                    android:id="@id/ship_address_edit_name"
                    style="@style/ShipAddressEidtCont"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:drawablePadding="10.0dip"
                    android:paddingEnd="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true" />
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="手机号码: " />

                <EditText
                    android:id="@id/ship_address_edit_mobile"
                    style="@style/ShipAddressEidtCont"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:digits="0123456789"
                    android:drawablePadding="10.0dip"
                    android:inputType="number"
                    android:paddingEnd="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true" />
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:text="省份" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10.0dip">

                    <Spinner
                        android:id="@id/ship_address_edit_aname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:minWidth="50.0dip"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@id/ship_address_edit_aname_error"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:text="城市" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10.0dip">

                    <Spinner
                        android:id="@id/ship_address_edit_bname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:minWidth="50.0dip"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@id/ship_address_edit_bname_error"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:text="地区" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10.0dip">

                    <Spinner
                        android:id="@id/ship_address_edit_cname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:minWidth="50.0dip"
                        android:spinnerMode="dialog" />

                    <TextView
                        android:id="@id/ship_address_edit_cname_error"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <LinearLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="详细地址: " />

                <EditText
                    android:id="@id/ship_address_edit_detail"
                    style="@style/ShipAddressEidtCont"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10.0dip"
                    android:imeOptions="actionDone"
                    android:paddingEnd="10.0dip"
                    android:paddingRight="10.0dip" />
            </LinearLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent" />

            <RelativeLayout
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!--     <TextView
                         style="@style/ShipAddressEidtLable"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="设为默认地址" />-->

                <!--     <com.netease.mail.oneduobaohydrid.widget.CustomSlideSwitch
                         android:id="@id/ship_address_edit_default"
                         android:layout_width="41.0dip"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:layout_marginRight="10.0dip" />-->
            </RelativeLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip" />

            <TextView
                android:layout_margin="25.0dp"
                android:textSize="15sp"
                style="@style/TextView"
                android:textColor="@color/dark_gray"
                android:gravity="left"
                android:text="@string/address_edit_earn"/>

            <RelativeLayout
                android:id="@id/ship_address_edit_del"
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dip"
                android:background="@drawable/common_background_with_white"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    style="@style/ShipAddressEidtLine"
                    android:layout_width="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0.0dip" />

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除该地址"
                    android:textColor="@color/main_red" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/ship_address_edit_commit"
                style="@style/ShipAddressEidtItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_background_with_white"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    style="@style/ShipAddressEidtLine"
                    android:layout_width="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0.0dip" />

                <TextView
                    style="@style/ShipAddressEidtLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认收货地址"
                    android:textColor="@color/main_red"
                    />
            </RelativeLayout>

            <ImageView
                style="@style/ShipAddressEidtLine"
                android:layout_width="fill_parent"
                android:layout_marginLeft="0.0dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>