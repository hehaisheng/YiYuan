<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:topRightRadius="@dimen/number_picker_radius" android:bottomRightRadius="@dimen/number_picker_radius" />
            <solid android:color="@color/number_picker_pressed_bg" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:topRightRadius="@dimen/number_picker_radius" android:bottomRightRadius="@dimen/number_picker_radius" />
            <solid android:color="@color/number_picker_disable_bg" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <corners android:topRightRadius="@dimen/number_picker_radius" android:bottomRightRadius="@dimen/number_picker_radius" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>