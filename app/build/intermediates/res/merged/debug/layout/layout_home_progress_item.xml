<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/panel_content"
    android:layout_width="fill_parent"
    android:layout_height="216.0dip"
    android:background="@drawable/goods_bg"
    android:clickable="true">

    <com.shawnway.nav.app.yylg.view.CirclerImageView
        android:id="@id/goods_img"
        android:layout_width="fill_parent"
        android:layout_height="105.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/img_blank"
        />

    <ImageView
        android:layout_width="1.0px"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#ffe4e4e4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/goods_img"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">

        <TextView
            android:id="@id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="2"
            android:text="(第186期)iPhone6 4.7英寸苹果新品7英寸"
            android:textColor="@color/home_item_name_color"
            android:textSize="13.0sp" />

        <com.shawnway.nav.app.yylg.view.MyProgressBar
            android:id="@id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/goods_name" />


    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="#ffdcdcdc" />

    <include layout="@layout/include_tab_icon_layout" />
</RelativeLayout>