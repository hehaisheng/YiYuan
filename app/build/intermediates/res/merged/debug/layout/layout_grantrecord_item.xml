<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp">

    <RelativeLayout
        android:id="@+id/layout_grantrecord_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/layout_grantrecord_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff999999"
                android:text="赠与的时间"
                android:textSize="12sp"
                android:layout_gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_gravity="left"
            android:id="@+id/layout_grantrecord_item_granter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e5a787"
            android:text="被赠与者："/>

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_below="@id/layout_grantrecord_item_rl"
        android:id="@+id/layout_grantRecord_item_leftcontent"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_grantrecord_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e5a787"
            android:text="赠与金额:"
            android:paddingTop="2dp"
            android:visibility="gone"/>


            <TextView
                android:id="@+id/layout_grantrecord_item_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e5a787"
                android:text="赠与商品:"
                android:paddingTop="2dp"
                android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/layout_grantRecord_item_leftcontent"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

    </RelativeLayout>


</RelativeLayout>